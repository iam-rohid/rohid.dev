---
import type { CollectionEntry } from "astro:content";
import dayjs from "dayjs";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<div
  class="hover:bg-muted/50 relative flex flex-col p-4 transition-colors duration-200 md:rounded-xl"
>
  <a
    href={`/blog/${post.slug}`}
    class="absolute inset-0 focus:outline md:rounded-xl"
  >
    <div class="sr-only">{post.data.title}</div>
  </a>

  <p class="text-muted-foreground mb-1 text-sm">
    <span class="inline-flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="h-4 w-4"
      >
        <svg>
          <path d="M8 2v4"></path>
          <path d="M16 2v4"></path>
          <rect width="18" height="18" x="3" y="4" rx="2"></rect>
          <path d="M3 10h18"></path>
        </svg>
      </svg>
      {dayjs(post.data.publishDate).format("MMM D, YYYY")}
    </span>
  </p>

  <h2 class="font-semibold">{post.data.title}</h2>

  <p class="text-muted-foreground mt-2 line-clamp-3 leading-6">
    {post.data.description}
  </p>

  <div class="z-10 mt-4 flex flex-wrap gap-2">
    {
      post.data.tags.map((tag) => (
        <a
          href={`/tags/${tag}`}
          class="bg-secondary/50 hover:bg-secondary text-muted-foreground hover:text-foreground rounded-full px-2.5 py-1 text-sm underline-offset-2 hover:underline"
        >
          #{tag}
        </a>
      ))
    }
  </div>
</div>
